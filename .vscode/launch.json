{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python Debugger: Current File",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
            "args": [
                "USCC",
                "${input:arg1}",
                "${input:arg2}",
                "${input:arg3}",
				"${input:arg4}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "arg1",
            "type": "promptString",
            "description": "Enter the first argument - (Daily or Monthly)"
        },
        {
            "id": "arg2",
            "type": "promptString",
            "description": "Enter the second argument (month)"
        },
        {
            "id": "arg3",
            "type": "promptString",
            "description": "Enter the third argument (day)"
        },
        {
            "id": "arg4",
            "type": "promptString",
            "description": "Enter the forth argument (year)"
        }
    ]
}